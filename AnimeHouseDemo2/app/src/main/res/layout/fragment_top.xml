<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_marginLeft="40dp"
                android:id="@+id/editTop"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@drawable/shape"
                android:ems="10"
                android:hint="Top anime/manga..."
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textSize="25sp" />
            <Button
                android:id="@+id/searchBtnTop"
                android:layout_width="45dp"
                android:background="@drawable/ic_search_black_24dp"
                android:layout_height="35dp" />
        </LinearLayout>

        <TextView
            android:layout_width="320dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/direction"
            android:drawableLeft="@drawable/line"
            android:text="Anime:  upcoming - airing - tv - movie - ova - special.\nManga: novels - oneshots\nBoth: bypopularity - favorite"
            android:textSize="20sp" />

        <TextView
            android:layout_marginTop="150dp"
            android:id="@+id/errorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text=""
            android:textSize="20dp" />
    </LinearLayout>
</FrameLayout>